# Unified AI Business Assistant - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/unified_ai

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Security & Authentication
# ============================================
# IMPORTANT: Change these in production!
# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# AI Services (Optional)
# ============================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# ============================================
# Email Configuration (Optional)
# ============================================
# SendGrid API Key
SENDGRID_API_KEY=

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================
# File Storage Configuration
# ============================================
# Storage type: 'local' or 's3'
STORAGE_TYPE=local

# AWS S3 Configuration (if STORAGE_TYPE=s3)
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
