{
  "name": "unified-ai-assistant",
  "version": "1.0.0",
  "description": "Unified AI Business Assistant Desktop Application",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dev": "electron . --dev"
  },
  "build": {
    "appId": "com.unifiedai.assistant",
    "productName": "Unified AI Assistant",
    "directories": {
      "output": "build",
      "buildResources": "build-resources"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "../backend/**/*",
      "!../backend/venv/**/*",
      "!../backend/__pycache__/**/*",
      "!../backend/**/__pycache__/**/*",
      "!../backend/.pytest_cache/**/*",
      "!../backend/logs/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!__pycache__/**/*",
          "!**/__pycache__/**/*",
          "!.pytest_cache/**/*",
          "!logs/**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Unified AI Assistant"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Unified AI Assistant"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "business",
    "accounting",
    "crm",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}

